<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.TodaysEyebrowKtVer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainPink</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>

        //상태바 글씨색 설정
        <item name="android:windowLightStatusBar">true</item>
        //true는 어두운 글씨, false는 밝은 글씨
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mainPink</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor"
            tools:targetApi="q">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        //다크모드 강제 해제
        <item name="android:forceDarkAllowed">false</item>
    </style>
</resources>