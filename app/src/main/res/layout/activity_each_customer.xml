<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityEachCustomer">

    <RelativeLayout
        android:id="@+id/header_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/back_cardview"
            android:layout_width="@dimen/arrow_background_width"
            android:layout_height="@dimen/arrow_background_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_back_iv_left"
            android:backgroundTint="@color/transparent"
            android:clickable="true"
            app:cardCornerRadius="@dimen/half_arrow_background_height"
            app:cardElevation="0dp"

            app:rippleColor="@color/weakGrey">

            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="@dimen/back_iv_width"
                android:layout_height="@dimen/back_iv_height"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/revised_backarrow" />

        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:id="@+id/joinTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/notosansmonocjkkrbold"
            android:gravity="center"
            android:text="고객등록"
            android:textColor="#211f1f"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profile_cardview"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:backgroundTint="@color/ivory"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp"

        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/header_relative_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:layout_width="@dimen/profile_iv_width"
            android:layout_height="@dimen/profile_iv_height"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/thick_pink_profile_iv" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/customer_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="고객이름"

        android:fontFamily="@font/notosanscjkkrmedium"
        app:layout_constraintTop_toBottomOf="@+id/profile_cardview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/customer_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:text="고객 번호"

        app:layout_constraintTop_toBottomOf="@+id/customer_name_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>