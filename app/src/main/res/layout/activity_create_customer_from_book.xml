<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityCreateCustomerFromBook">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/back_cardview"
            android:layout_width="@dimen/arrow_background_width"
            android:layout_height="@dimen/arrow_background_height"
            android:backgroundTint="@color/transparent"
            app:cardCornerRadius="@dimen/half_arrow_background_height"
            app:cardElevation="0dp"
            android:clickable="true"
            app:rippleColor="@color/weakGrey"
            android:layout_centerVertical="true"

            android:layout_marginLeft="@dimen/margin_back_iv_left"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="@dimen/back_iv_width"
                android:layout_height="@dimen/back_iv_height"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:src="@drawable/revised_backarrow" />

        </com.google.android.material.card.MaterialCardView>


        <EditText
            android:id="@+id/edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/back_cardview"
            app:layout_constraintRight_toLeftOf="@+id/check_all"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"

            android:background="@drawable/edittext_frame_searchmember"
            android:drawableLeft="@drawable/drawable_left_image_search"
            android:drawablePadding="10dp"

            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"

            android:fontFamily="@font/notosanscjkkrmedium"
            android:includeFontPadding="false"
            android:hint="이름 또는 전화번호로 검색해주세요"
            android:textColorHint="@color/mainGreyFor50"
            android:textSize="@dimen/search_edit_thirteen_textsize"
            android:textColor="@color/mainGrey"

            android:inputType="text"
            android:maxLines="1"
            />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:gravity="center"
            android:id="@+id/check_all"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@+id/header_relative_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        tools:listitem="@layout/rv_item_customers_book"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.TodaysEyebrowKtVer"

        android:fontFamily="@font/notosanscjkkrmedium"
        android:includeFontPadding="false"
        android:textSize="15sp"
        android:paddingRight="10dp"
        app:icon="@drawable/outline_person_add_black_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>