<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TodaysEyebrowKtVer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainPink</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>

        //상태바 글씨색 설정
        <item name="android:windowLightStatusBar">true</item>
        //true는 어두운 글씨, false는 밝은 글씨
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mainPink</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.TodaysEyebrowKtVer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TodaysEyebrowKtVer.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="Theme.TodaysEyebrowKtVer.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    //Custom BottomSheetDialog

    <style name="TopRoundedBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TopRoundedModalStyle</item>
    </style>

    <style name="TopRoundedModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheetdialog_top_rounded</item>
    </style>


    <style name="AllRoundedBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AllRoundedModalStyle</item>
    </style>

    <style name="AllRoundedModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheetdialog_4way_rounded</item>
    </style>

    //PopUp Activity theme
    <style name="popupTheme" parent="Theme.MaterialComponents.Light.Dialog">

        <item name="colorPrimary">@color/mainGrey</item>
        <item name="colorPrimaryDark">@color/mainBlue</item>
        <item name="colorAccent">@color/mainPink</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>

    </style>

    //calendar

    <style name="NoActionBar"
        parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    //timepicker Theme
    <style name="AppTheme.TimePicker"
        parent="Theme.TodaysEyebrowKtVer">
        <item name="colorControlNormal">@color/mainPink</item>
    </style>

    //=============EditText==============

    //ActivityEditCustomer Edittext theme
    <style name="EditCustomerEdittext" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/transparent</item>
        <item name="colorControlActivated">@color/mainBlue</item>
    </style>

    //============= Custom AlertDialot theme ==========
    <style name="CustomDialog_Simple" parent="Theme.MaterialComponents.Light.Dialog.Alert">

<!--        //background-->
<!--        <item name="android:background">#ffffff</item>-->
<!--        -->

        //title color
        <item name="android:textColor">@color/mainBlack</item>

        //content color
        <item name="android:textColorPrimary">@color/mainGrey</item>


    </style>




</resources>