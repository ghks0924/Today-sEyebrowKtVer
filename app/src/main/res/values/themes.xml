<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TodaysEyebrowKtVer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainPink</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>

        //상태바 글씨색 설정
        <item name="android:windowLightStatusBar">true</item>
        //true는 어두운 글씨, false는 밝은 글씨
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mainPink</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.TodaysEyebrowKtVer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TodaysEyebrowKtVer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.TodaysEyebrowKtVer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    //Custom BottomSheetDialog
    <style name="CustomBottomSheetDialog"
        parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    //PopUp Activity theme
    <style name="popupTheme" parent="Theme.AppCompat.Light.Dialog">

        <item name="colorPrimary">@color/mainGrey</item>
        <item name="colorPrimaryDark">@color/mainBlue</item>
        <item name="colorAccent">@color/mainPink</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    //calendar

    <style name="NoActionBar"
        parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    //timepicker Theme
    <style name="AppTheme.TimePicker"
        parent="Theme.TodaysEyebrowKtVer">
        <item name="colorControlNormal">@color/mainPink</item>
    </style>


</resources>